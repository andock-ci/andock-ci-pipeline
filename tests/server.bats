#!/usr/bin/env bats

@test "connect" {
  ssh-keygen -R "192.168.33.10"
  ../bin/acp.sh connect "192.168.33.10" "root"
}

@test "server:install" {

  vagrant destroy -f
  vagrant up
  ssh-keygen -R "192.168.33.10"
  ../bin/acp.sh _update-configuration
  ../bin/acp.sh connect "192.168.33.10" "root"
  ../bin/acp.sh server:install
}
@test "server:ssh-add" {
  ../bin/acp.sh server:ssh-add "ssh-rsa  andock@andock-ci"
}

